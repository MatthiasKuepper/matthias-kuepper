<script>
  function shareBlog() {
    const shareData = {
      title: document.title,
      url: window.location.href
    };

    if (navigator.share) {
      navigator.share(shareData).catch(console.error);
    } else {
      prompt("Link zum Kopieren:", window.location.href);
    }
  }
</script>

    
    
    
